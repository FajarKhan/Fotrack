<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#000"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <ImageView
        android:id="@+id/focus"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/icn_repeat_04"
        android:layout_centerHorizontal="true">
    </ImageView>
    <TextView
        android:layout_below="@id/focus"
        android:layout_marginTop="50dp"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="35dp"
        android:textSize="28sp"
        android:id="@+id/title"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:text="Just repeat"
        android:textColor="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@id/title"
        android:layout_marginTop="20dp"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="35dp"
        android:textSize="18sp"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:text="Repeat the cycle four times and then take a long break. The more you use, the more productive you will become."
        android:textColor="#a1ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>